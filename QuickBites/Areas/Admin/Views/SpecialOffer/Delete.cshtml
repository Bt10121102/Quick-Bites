                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="EndDate" disabled class="form-control border-0 shadow" />
                    <label asp-for="EndDate" class="ms-2"></label>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="SpecialOffer" asp-action="Index" class="btn btn-secondary border  form-control">
